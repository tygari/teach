<html>
	<head>
		<title>Idle Teach</title>
	</head>
	<body style="text-align:center">
	<p>
	<button type="button" onclick="clicker()"><b>Click</b></button>
	<br>Amount: <span id="clicks">0</span>
	</p>
	<p><button type="button" onclick="autoBuy()"><b>Auto Click</b></button>
	<br>Auto Click: <span id="amount">0</span>
	<br>Cost: <span id="amountCost">10</span>
	</p>
	<p><button type="button" onclick="saver()"><b>Time Saver</b></button>
	<br>Time Saver: <span id="savers">0</span>
	<br>Cost: <span id="saverCost">10</span>
	</p>
		<script>
			var vars = {
				"clicks": 0,																//clicks variable
				"amount": 0,																//auto clicks value
				"saver": 0,
			}

			window.addEventListener("load",function(){start();});

			const start = function(){setTimeout(auto, 10000);}								//starts time loop in 1000 miliseconds

			const auto = function(){
				let saver = 10000 - (vars.saver * 1000);
				//vars.clicks = vars.clicks + vars.amount;	
				vars.clicks += vars.amount;													//time loop adds to clicks
				document.getElementById('clicks').innerHTML = vars.clicks;
				setTimeout(auto, saver);													//restarts time loop in 1000 miliseconds
			}

			const clicker = function(){
				//vars.clicks = vars.clicks + 1;
				//vars.clicks += 1;
				vars.clicks++;																//adds +1 to clicks
				document.getElementById('clicks').innerHTML = vars.clicks;					//overwrites html clicks value
			}

			const amountCost = function() {return Math.floor(10*Math.pow(1.1,vars.amount));}//works out the cost of next autoclick

			const autoBuy = function(){
				if(vars.clicks >= amountCost()){											//checks that the player can afford the next autoclick
					vars.clicks -= amountCost();											//removes the clicks spent
					vars.amount++;															//increases number of auto click amount +1
					document.getElementById('amount').innerHTML = vars.amount;				//updates the number of autoclick amount for the user
					document.getElementById('clicks').innerHTML = vars.clicks;				//updates the number of clicks for the user
				}
				document.getElementById('amountCost').innerHTML = amountCost();				//updates the autoclick cost for the user
			}

			const saverCost = function() {return Math.floor(10*Math.pow(1.1,vars.saver));}

			const saver = function(){
				if(vars.clicks >= saverCost() && vars.saver < 10){
					vars.clicks -= saverCost();
					vars.saver++;
					document.getElementById('savers').innerHTML = vars.saver;
					document.getElementById('clicks').innerHTML = vars.clicks;
				}
				document.getElementById('saverCost').innerHTML = saverCost();
			}
		</script>
	</body>
</html>
